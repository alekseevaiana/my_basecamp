<header class="header">
    <%= render "shared/navigation" %>
    <%= render "shared/errors" %>
    
    <div class="invitation">
        <div class="invitation__container">
            <div class="invitation__title header__mixed__color">
                <h1>Add new user</h1>
            </div>

            <div class="invitation__content">
                <div class="invitation__left__container">
                    <%= form_with(local: true, url: {action: "create"}) do |f| %>
                        <div class="invitation__email__container">
                            <%= f.label :email, class: "invitation__email__label" %>
                            <%= f.email_field :email, class: "invitation__email__textfield", placeholder: "Enter the user email" %>
                        </div>
                        
                        <div class="invitation__role__container">
                            <div class="invitation__roleuser__container">
                                <%= inline_svg_tag "administration", class: "invitation__svg" %>
                                <%= f.label :admin %>
                                <%= f.radio_button :role, "admin" %>
                            </div>

                            <div class="invitation__roleuser__container">
                                <%= inline_svg_tag "normal_user", class: "invitation__svg" %>
                                <%= f.label :normal__user %>
                                <%= f.radio_button :role, "normal user" %>
                            </div>
                        </div>
                        
                        <div class="invitation__btn__container">
                            <%= f.submit "Add user", class: "btn__medium btn__color__yellow__orange btn__animation__expand" %>
                        </div>
                        
                    <% end %>
                </div>
            
                <div class="invitation__right__container">
                    <%= inline_svg_tag "invitation", class: "invitation__background__svg" %>
                </div>
            </div>
            
        </div>
    </div>
    
</header>